<Window x:Class="VICEPDBMonitor.ProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ProfileView" Height="405" Width="749" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Button x:Name="mRefresh" Content="Refresh" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Refresh_Click"/>
        <TextBox x:Name="mTextBox" Margin="10,35,10,10" TextWrapping="Wrap" Text="TextBox" FontFamily="Consolas" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="271,10,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.053,0.4" Click="Start_Click"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="351,10,0,0" VerticalAlignment="Top" Width="75" Click="Stop_Click"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>

    </Grid>
</Window>
